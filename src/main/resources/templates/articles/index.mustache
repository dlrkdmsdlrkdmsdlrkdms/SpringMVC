{{>layout/header}}

{{#msg}}
    {{msg}}
{{/msg}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
    </tr>
    </thead>
    <tbody>
    <!-- 객체 데이터를 사용하는 범위 : 반복가능한 객체일 경우, 해당 부분을 반복 -->
    {{#articleList}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/articles/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
        </tr>
    {{/articleList}}
    <!-- 객체 데이터를 사용하는 범위  -->
    </tbody>
</table>

<a href="/articles/new">새 글 쓰기</a>

{{>layout/footer}}